{
  "name": "chess-analyzer",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "concurrently -n client,server -c blue,green \"bun run dev:client\" \"bun run dev:server\"",
    "dev:client": "vite --config client/vite.config.ts",
    "dev:server": "bun --watch server/index.ts",
    "build": "vite build --config client/vite.config.ts",
    "start": "NODE_ENV=production bun server/index.ts",
    "typecheck": "tsc -b && eslint client/src/ server/",
    "lint": "eslint client/src/ server/",
    "test": "bun test tests/",
    "test:e2e": "bun e2e/seed.ts && bun test --timeout 30000 e2e/",
    "test:all": "bun test tests/ && bun e2e/seed.ts && bun test --timeout 30000 e2e/"
  },
  "dependencies": {
    "@lichess-org/chessground": "^10.0.2",
    "@tanstack/react-query": "^5.90.21",
    "chess.js": "^1.4.0",
    "hono": "^4.12.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.12.0",
    "recharts": "^3.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/vite": "^4.1.13",
    "@types/bun": "^1.3.9",
    "@types/node": "^22",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "eslint": "^10.0.1",
    "playwright-core": "1.58.0",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
