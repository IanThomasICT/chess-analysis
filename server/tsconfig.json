{
  "compilerOptions": {
    "lib": ["ES2022"],
    "types": ["bun"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "composite": true
  },
  "include": ["./**/*"]
}
